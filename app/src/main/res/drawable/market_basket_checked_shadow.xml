<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#33000000" /> <!-- 그림자 색상 -->
            <corners android:radius="4dp" /> <!-- 그림자 모서리의 둥글기 -->
        </shape>
    </item>

    <item android:bottom="4dp"> <!-- 그림자의 위치를 조정하여 그림자가 표시되도록 합니다 -->
        <bitmap
            android:src="@drawable/market_basket_checked"
            android:gravity="center" />
    </item>
</layer-list>